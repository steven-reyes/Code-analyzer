# .pylintrc

[MASTER]
# List of directories that should not be checked
ignore=venv,node_modules,dist,build

# Maximum number of jobs to use for parallel execution
jobs=1

[MESSAGES CONTROL]
# Disable certain checks if needed, e.g.:
# - C0114: missing module docstring
# - C0116: missing function docstring
disable=C0114,C0116

[FORMAT]
# Maximum number of characters on a single line.
max-line-length=88

[REPORTS]
# Tells pylint to display full reports or not
reports=no

[TYPECHECK]
ignore-missing-imports=yes
